<%- include("header") -%>
  <body>
    <div class="box" id="heading">   
         <h1><%= kindOfDay %></h1>
    </div>
    <div class="box">
        <%for(var i=0; i<itemList.length; i++){%>
            <div class="item">
                <input type="checkbox">
                <p><%= itemList[i] %></p>
            </div>
         <% } %>

         <form action="/" method="post" class="item">
            <input type="text" name="newTask" id="newTask" placeholder="New Item" autocomplete="off"/>
            <button type="submit" id="btnAdd" name="button" value=<%= kindOfDay %>>+</button>

    </div>
    <button type="submit" id="btnReset" name="reset" value=<%= kindOfDay %>+"R">Reset</button>

</form>

  </body>

  <%- include("footer") -%>
